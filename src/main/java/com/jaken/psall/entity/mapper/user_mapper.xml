<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jaken.psall.dao.UserDaoMy">

	<resultMap id="BaseResultMap" type="com.jaken.psall.entity.User">
		<id column="id" jdbcType="VARCHAR" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="passwd" jdbcType="VARCHAR" property="passwd" />
		<result column="email" jdbcType="VARCHAR" property="email" />
		<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
		<result column="is_use" jdbcType="CHAR" property="myIsUse" />
		<result column="age" jdbcType="INTEGER" property="age" />
	</resultMap>
	<sql id="Base_Column_List">
		id, name, passwd, email, create_time, is_use, age
	</sql>
	<resultMap  id="assoresultmap" extends="BaseResultMap" type="com.jaken.psall.entity.User">
		<collection property="categories" fetchType="lazy" column="id" 
			select="com.jaken.psall.dao.CategoryDaoMy.getCategoriesByUserId">
		</collection>
	</resultMap>

	<select id="mybatisGetUserId"  resultMap="assoresultmap" parameterType="java.lang.String">
		select 
		<include refid="Base_Column_List"/>
		from t_user where id=#{_parameter}
	</select>
	
	
	
</mapper>